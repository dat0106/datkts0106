        <activity
            android:name="com.vogella.android.lifecycle.activity.MainActivity"
            android:label="MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vogella.android.lifecycle.activity.SecondActivity"
            android:label="SecondActivity" >
        </activity>
